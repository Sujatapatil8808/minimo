
body{
	line-height: 1.5;
}


.container{
	width:1100px;
	margin: 0 auto;
}

ul{
	list-style:none;
}

a:link, a:visited{
	text-decoration:none;
}

.text-right{
	text-align:right;
}

.text-center{
	text-align:center;
}

.row , .row::after, .row::before {
	display:table;
	clear:both;
	width:100%;
	
}

[class^='col']{
	float:left;
	padding:0 15px;
}

.col3{
	width:calc(100% * 3 / 12);
}

/* .col4{ 
	 width:calc(100% * 4 / 12); 
 } */

.col5{
	width:calc(100% * 5 / 12);
}

.col6{
	width:calc(100% * 6 / 12);
}

.col7{
	width:calc(100% * 7 /12);
}

.col9{
	width:calc(100% * 9 / 12);
}

.col10{
	width:calc(100% * 10 / 12);
}

.col12{
	width:calc(100% * 12 /12);
}

.mb-70{
	margin-bottom:70px;
}
.mb-90{
	margin-bottom:90px;
}

.mb-130{
	margin-bottom:130px;
}


.offset-1{
	margin-left:calc(100% * 1 / 12);
}

.offset-3{
	margin-left:calc(100% * 3 / 12);
}

.offset-4{
	margin-left:calc(100% * 4 / 12);
}

.pri-heading, .leaveaComment{
	font-size:14px;
	text-transform:uppercase;
	color:#b4ad9e;
	margin-bottom:30px;
	font-weight:lighter;
}

.sec-heading{
	font-size:30px;
	text-transform:capitalize;
	color:#626262;
	margin-bottom:30px;
}

.para{
	font-size:14px;
	color:#626262;
	margin-bottom:50px;
}

.btn{
	 padding:20px 30px;
	 cursor:pointer;
	 border:1px solid black;
	 background-color:white;
	 color:#626262;
 }
 .btn:hover, .btn:focus, .btn:active{
	 background-color:#626262;
	 
 }
